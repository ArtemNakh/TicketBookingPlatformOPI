@{
    ViewBag.Title = "Login";
}

<h2>Вхід</h2>

@using (Html.BeginForm("Login", "Administration", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Ім'я користувача")
        @Html.TextBox("username", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Пароль")
        @Html.Password("password", null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Увійти</button>
}

<p>Немає акаунту? <a href="@Url.Action("Register", "Administration")">Реєстрація тут</a>.</p>
