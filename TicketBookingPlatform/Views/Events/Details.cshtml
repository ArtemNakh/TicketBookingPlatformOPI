@model TicketBookingPlatform.Core.Models.Events

@{
    ViewData["Title"] = "Event Details";
}

<h2>@Model.Title</h2>

<div>
    <h4>Event Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.DateStart.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.DateEnd.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Age Rating</dt>
        <dd class="col-sm-10">@Model.AgeRating</dd>

    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
