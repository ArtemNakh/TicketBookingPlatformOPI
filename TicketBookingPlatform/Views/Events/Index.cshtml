@model IEnumerable<TicketBookingPlatform.Core.Models.Events>

@{
    ViewData["Title"] = "Events";
}

<h2>Events</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Price</th>
            <th>Age Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.DateStart.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@eventItem.DateEnd.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@eventItem.Price</td>
                <td>@eventItem.AgeRating</td>
              
                <td>
                    <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@eventItem.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
