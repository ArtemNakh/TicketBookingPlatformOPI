@model TicketBookingPlatform.Core.Models.Events

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Are you sure you want to delete this event?</h2>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.DateStart.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.DateEnd.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Age Rating</dt>
        <dd class="col-sm-10">@Model.AgeRating</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed"method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
