@model TicketBookingPlatform.Core.Models.Place

@{
    ViewData["Title"] = "Delete Place";
}

<h2>Delete Place</h2>

<h3>Are you sure you want to delete this place?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Region</dt>
        <dd class="col-sm-10">@Model.Region</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">Street</dt>
        <dd class="col-sm-10">@Model.Street</dd>

        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Model.NumberStreet</dd>
    </dl>
</div>


<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
