@model IEnumerable<TicketBookingPlatform.Core.Models.Events>

@{
    ViewData["Title"] = "Available Events";
}

<h2>Available Events</h2>
<a asp-action="Create" asp-controller="Reservation"  class="btn btn-primary">
    reserv
</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.DateStart.ToString("MM/dd/yyyy")</td>
               
            </tr>
        }
    </tbody>
</table>
