@model TicketBookingPlatform.Core.Models.User

<h2>User Details</h2>

<div>
    <h3>@Model.Name @Model.Surname</h3>

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.Surname</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Birthday</dt>
        <dd class="col-sm-10">@Model.Birthday.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Login</dt>
        <dd class="col-sm-10">@Model.Login</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
