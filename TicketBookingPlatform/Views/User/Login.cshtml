@model TicketBookingPlatform.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Login">Login</label>
        <input asp-for="Login" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<a asp-action="Register" class="btn btn-link">Don't have an account? Register</a>
